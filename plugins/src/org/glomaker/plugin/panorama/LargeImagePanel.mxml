<?xml version="1.0" encoding="utf-8"?>
<mx:VBox
	xmlns:mx="http://www.adobe.com/2006/mxml"
	verticalScrollPolicy="off"
	horizontalScrollPolicy="off">
	
	<mx:Script>
		<![CDATA[
			
			[Bindable]
			public var imageSource:String;
			
		]]>
	</mx:Script>
	
	<mx:Label text="Use the properties panel to change the image"/>
	<mx:Image
		width="100%"
		height="100%"
		verticalAlign="middle"
		horizontalAlign="center"
		source="{imageSource}"/>
	<mx:HBox
		width="100%"
		horizontalAlign="center">

		<mx:Button id="setNorthButton" label="Set as North" />
		<mx:Button id="removeButton" label="Remove Image" />
		<mx:Spacer width="20" />
		<mx:Button id="closeButton" label="Close" />
		
	</mx:HBox>
	
</mx:VBox>
